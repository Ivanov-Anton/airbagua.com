   <config>
      <fields name="params">
	 <fieldset name="basic">
	    <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
	    <field name="spacer" type="spacer" hr="true" />
	    <field name="mod_itf_call_me_back_headline" type="text" required="false" size="52" label="MOD_ITF_CALL_ME_BACK_HEADLINE_LABEL" description="MOD_ITF_CALL_ME_BACK_HEADLINE_DESCRIPTION" />
	    <field name="mod_itf_call_me_back_intro" type="textarea" label="MOD_ITF_CALL_ME_BACK_INTRO_LABEL" rows="5" required="true" cols="30"	description="MOD_ITF_CALL_ME_BACK_INTRO_DESCRIPTION" default="Please enter your name and phone number" />
	    <field name="mod_itf_call_me_back_confirm" type="textarea" label="MOD_ITF_CALL_ME_BACK_CONFIRM_LABEL" rows="5" required="true" cols="30" description="MOD_ITF_CALL_ME_BACK_CONFIRM_DESCRIPTION" translate_default="true" default="Thank you for your inquiry" />
	    <field name="mod_itf_call_me_back_recipient" type="text" validate="email" default=""	required="true"	size="52" label="MOD_ITF_CALL_ME_BACK_RECIPIENT_LABEL"	description="MOD_ITF_CALL_ME_BACK_RECIPIENT_DESCRIPTION" />
	    <field name="mod_itf_call_me_back_redirect" type="text" default="" required="false" size="52" label="MOD_ITF_CALL_ME_BACK_REDERECT_LABEL" description="MOD_ITF_CALL_ME_BACK_REDERECT_DESCRIPTION" />
	    <field name="mod_itf_call_me_back_phonenumber_length" type="list" default="6" label="MOD_ITF_CALL_ME_BACK_PHONENUMBER_LENGTH_LABEL"  description ="MOD_ITF_CALL_ME_BACK_PHONENUMBER_LENGTH_DESCRIPTION">
